<H1>New Blogger</H1>
<% if @blogger.errors %>
<ul>
    <% @blogger.errors.full_messages.each do |error| %>
        <li><%= error %></li>
    <% end %>
</ul>
<% end %>

<br>

<%= form_for(@blogger) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :bio %>
    <%= f.text_field :bio %>
    <br>
    <%= f.label :age %>
    <%= f.text_field :age %>
    <br>
    <%= f.submit "Submit!" %>
<% end %>